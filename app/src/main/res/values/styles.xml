<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_number">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">numberOperation</item>
    </style>

    <style name="button_right_column">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">false</item>
        <item name="android:onClick">symbolsOperation</item>
    </style>

    <style name="button_top_column">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_margin">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">numberOperation</item>
    </style>

    <style name="button_row">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>